{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": false,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "declaration": false,
    "sourceRoot": "src",
    "outDir": "dist",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": [
      "es2018"
    ]
  },
  "include": [
    "src",
    "../typings.d.ts"
  ]
}
